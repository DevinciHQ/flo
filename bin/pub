#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use pub\Command;
use Symfony\Component\Console\Application;

$application = new Application('pub', '@package_version@');
$application->add(new pub\Command\ConfigGetCommand());
$application->add(new pub\Command\ConfigSetCommand());
$application->add(new pub\Command\ConfigDelCommand());
$application->add(new pub\Command\PullRequest\CertifyCommand());
$application->add(new pub\Command\PullRequest\RejectCommand());
$application->add(new pub\Command\GitInitCommand());
$application->add(new pub\Command\ValidateComposerCommand());
$application->run();
