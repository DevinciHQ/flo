#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use pub\Command;
use Symfony\Component\Console\Application;

$application = new Application('pub', '@package_version@');
$application->add(new pub\Command\UpdateCommand());
$application->add(new pub\Command\ConfigGetCommand());
$application->add(new pub\Command\ConfigSetCommand());
$application->add(new pub\Command\ConfigDelCommand());
$application->add(new pub\Command\NewRelicDeployCommand());
$application->add(new pub\Command\PullRequest\IntegrationCommand());
$application->add(new pub\Command\PullRequest\DeployCommand());
$application->add(new pub\Command\PullRequest\CertifyCommand());
$application->add(new pub\Command\PullRequest\IgnoreCommand());
$application->add(new pub\Command\PullRequest\RejectCommand());
$application->add(new pub\Command\PullRequest\UnRejectCommand());
$application->add(new pub\Command\PullRequest\PostPoneCommand());
$application->add(new pub\Command\PullRequest\UnPostPoneCommand());
$application->add(new pub\Command\AcquiaCloudHooksCommand());
$application->add(new pub\Command\GitInitCommand());
$application->add(new pub\Command\ValidateComposerCommand());
$application->run();
